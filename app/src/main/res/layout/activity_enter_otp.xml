<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterOtpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ocrEditActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#CCD5F4">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/nunito_extra_bold"
            android:text="Agasti Pharmaceuticals"
            android:textColor="#0B0B4B"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/bariol_bold_webfont"
        android:text="Enter OTP &amp; Reset Password"
        android:padding="10dp"
        android:textColor="#0B0B4B"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp"
            app:contentPaddingLeft="25dp"
            app:contentPaddingRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                Here, the paddingBottom behaves like paddingTop-->
                    <EditText
                        android:id="@+id/etxt_email_otp"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/lightgrey_box"
                        android:drawableStart="@drawable/otp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/bariol_bold_webfont"
                        android:hint="Enter OTP sent to your email"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                Here, the paddingBottom behaves like paddingTop-->
                    <EditText
                        android:id="@+id/etxt_password_reset_otp"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/lightgrey_box"
                        android:drawableStart="@drawable/lock"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/bariol_bold_webfont"
                        android:hint="Set new password"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                Here, the paddingBottom behaves like paddingTop-->
                    <EditText
                        android:id="@+id/etxt_retype_password_reset_otp"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/lightgrey_box"
                        android:drawableStart="@drawable/lock"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/bariol_bold_webfont"
                        android:hint="Re-type Password"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#0B0B4B"
                    android:fontFamily="@font/bariol_bold_webfont"
                    android:text="Set New Password"
                    android:textSize="15sp"
                    app:cornerRadius="50dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>