<?xml version="1.0" encoding="utf-8"?>

<!-- Linear layout as parent layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Text view to show the text Select course-->
    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/bariol_bold_webfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Medicine"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginStart="17dp"
        android:src="@drawable/medicinee"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    </LinearLayout>

    <!-- Edit text to allow user to type name
           of item he/she wants to search-->
    <EditText
        android:id="@+id/edit_text"
        android:fontFamily="@font/bariol_bold_webfont"
        android:layout_width="match_parent"
        android:textSize="19dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Search for your product..."
        android:padding="12dp"
        android:singleLine="true" />

    <!-- List view to insert list of items-->
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>